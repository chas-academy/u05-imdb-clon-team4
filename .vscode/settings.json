{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "emmet.includeLanguages": {
        "blade": "html"
    },
    "[php]": {
        "editor.defaultFormatter": "kokororin.vscode-phpfmt"
    },
    "beautify.language": {
        "html": ["blade"]
    },
    "phpfmt.passes": [
        "OnlyOrderUseClauses"
    ],
    "[blade]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    }
}
